@model ErrorViewModel
@{
    ViewData["Title"] = Model.ErrorTitle ?? "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="card-title">@(Model.ErrorTitle ?? "Error")</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <p>@Model.UserFriendlyMessage</p>
                    </div>

                    @if (Model.ShowRequestId)
                    {
                        <div class="text-muted mb-3">
                            <small>Request ID: <code>@Model.RequestId</code></small>
                        </div>
                    }

                    @if (Model.ShowDetailedError)
                    {
                        <div class="mt-4">
                            <h4>Debug Information</h4>
                            <hr />
                            <dl class="row">
                                <dt class="col-sm-3">Exception Type</dt>
                                <dd class="col-sm-9">@Model.ExceptionType</dd>

                                <dt class="col-sm-3">Exception Message</dt>
                                <dd class="col-sm-9">@Model.ExceptionMessage</dd>

                                @if (!string.IsNullOrEmpty(Model.ExceptionStackTrace))
                                {
                                    <dt class="col-sm-3">Stack Trace</dt>
                                    <dd class="col-sm-9">
                                        <pre class="bg-light p-3 rounded"><code>@Model.ExceptionStackTrace</code></pre>
                                    </dd>
                                }
                            </dl>
                        </div>
                    }

                    <div class="mt-4">
                        <p class="text-muted">@Model.SupportMessage</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Model.ReturnUrl" class="btn btn-outline-primary">
                                <i class="fas fa-arrow-left"></i> Return
                            </a>
                            <a href="/" class="btn btn-outline-secondary">
                                <i class="fas fa-home"></i> Home
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>