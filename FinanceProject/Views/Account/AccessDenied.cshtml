@{
    ViewData["Title"] = "Access Denied";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">Access Denied</h4>
                </div>
                <div class="card-body">
                    <div class="text-center">
                        <i class="fas fa-exclamation-triangle text-danger" style="font-size: 48px;"></i>
                        <h5 class="mt-3">You do not have permission to access this resource.</h5>
                        <p class="text-muted">Please contact the administrator if you believe this is an error.</p>
                    </div>

                    <div class="mt-4 text-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
