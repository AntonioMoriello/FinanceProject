@model Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">Delete Transaction</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5>Are you sure you want to delete this transaction?</h5>
                        <p>This action cannot be undone.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Date</dt>
                        <dd class="col-sm-8">@Model.Date.ToShortDateString()</dd>

                        <dt class="col-sm-4">Amount</dt>
                        <dd class="col-sm-8">@Model.Amount.ToString("C")</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Type == TransactionType.Income ? "success" : "danger")">
                                @Model.Type
                            </span>
                        </dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">
                            <span class="badge" style="background-color: @Model.Category.ColorCode">
                                @Model.Category.Name
                            </span>
                        </dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Model.Description</dd>
                    </dl>

                    <form asp-action="DeleteConfirmed" method="post">
                        <input type="hidden" name="id" value="@Model.TransactionId" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete Transaction
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>