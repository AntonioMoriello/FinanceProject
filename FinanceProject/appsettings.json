{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=FinanceManager.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "DetailedErrors": true,
  "AllowedHosts": "*",
  "Kestrel": {
    "EndPoints": {
      "Http": {
        "Url": "http://localhost:5000"
      }
    }
  },
  "EPPlus": {
    "ExcelPackage": {
      "LicenseContext": "NonCommercial"
    }
  },
  "ApplicationSettings": {
    "SiteName": "Finance Manager - Development",
    "SupportEmail": "support@financemanager.com",
    "EnableRegistration": true,
    "MaxLoginAttempts": 10,
    "LockoutDurationMinutes": 5,
    "DefaultCurrency": "USD",
    "DefaultDateFormat": "MM/dd/yyyy",
    "SessionTimeoutMinutes": 60,
    "EnableSwagger": true,
    "ShowDetailedErrors": true,
    "PasswordRequirements": {
      "MinimumLength": 6,
      "RequireDigit": true,
      "RequireLowercase": true,
      "RequireUppercase": true,
      "RequireSpecialCharacter": true
    },
    "Email": {
      "SendGridKey": "YOUR_SENDGRID_KEY",
      "FromEmail": "dev-noreply@financemanager.com",
      "FromName": "Finance Manager - Dev"
    }
  },
  "SecurityHeaders": {
    "DisableStrictSSL": true,
    "AllowDebugHeaders": true
  },
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:5000",
      "http://localhost:3000"
    ]
  }
}